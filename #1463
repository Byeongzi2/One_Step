#include<iostream>
#include<algorithm>

using namespace std;
#define MAXN 1000001
#define INF 987654321

int n;
int arr[MAXN];

int dp(int x) {
	if (x == 1) return 0;
	if (arr[x] != INF) return arr[x];
	
	int num = dp(x - 1) + 1;
	if (x % 3 == 0) num = min(num, dp(x / 3) + 1);
	if (x % 2 == 0) num = min(num, dp(x / 2) + 1);
	return arr[x] = num;
}
int main() {
	ios::sync_with_stdio(0);
	cin.tie(0);

	cin >> n;
	for (int i = 0; i <= n; i++) arr[i] = INF;
	arr[1] = 0;
	dp(n);
	cout << arr[n];
	return 0;
}
